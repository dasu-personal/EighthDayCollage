<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.dasugames.eighthdaycollage.activity.MainActivity" >



    <ImageView
        android:id="@+id/transitionOutImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerCrop"/>
    

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="(BACK)" />

    <Button
        android:id="@+id/selectScreenView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/backButton"
        android:text="(SELECT)" />

    <com.dasugames.eighthdaycollage.customview.PoiView
        android:id="@+id/infoPane"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/editScreenButton" />
    <com.dasugames.eighthdaycollage.customview.PathsView
        android:id="@+id/navigationPane"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    </com.dasugames.eighthdaycollage.customview.PathsView>
</RelativeLayout>